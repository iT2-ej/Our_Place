<h1>会員情報編集</h1>
 <%= form_with model: @user,url: public_user_path do |f| %>

<table class="table table-borderless">
  <colgroup>
    <col width="30%">
    <col width="30%">
    <col width="50%">
  </colgroup>
   <tbody>
    <tr>
     <td>
      <label for="inputImage">プロフィール画像</label>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
     </td>
    </tr>
     <tr>
      <td>ユーザーネーム</td>
      <td>
        <%= f.text_field :user_name, autofocus: true %>
      </td>
     <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autoforcus: true %></td>
     </tr>
     <tr>
      <td>氏名</td>
      <td><%= f.label :last_name,"(姓)" %><%= f.text_field :last_name, autofocus: true  %></td>
      <td><%= f.label :first_name,"(名)"%><%= f.text_field :first_name, autofocus: true %></td>
     </tr>
     <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana, autofocus: true %></td>
      <td><%= f.text_field :first_name_kana, autofocus: true %></td>
     </tr>
     <tr>
      <td>自己紹介</td>
      <td>
        <%= f.text_area :introduction %>
      </td>
     </tr>
   </tbody>
 </table>
 <div class="row">
   <div class="col text-center">
     <%= f.submit "編集内容を保存",class:"btn btn-success" %>
     <% end %>
   </div>
   <% if current_user.email != 'guest@example.com'  %>
   <div class="col text_center">
     <%= link_to "退会する", public_unsubscribe_path,class:"btn btn-secondary" %>
   </div>
   <% end %>
   <div class="col text-center">
    <%= link_to "戻る",:back, class:"btn btn-primary" %>
   </div>
 </div>
 
 
