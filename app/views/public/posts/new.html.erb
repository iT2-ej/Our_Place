<%= form_with model: @post, url: public_posts_path, local: true do |form| %>

 <tr>
   <td>
    <%= form.label :title %>
    <%= form.text_field :title %> 
   </td>
   <td>
    <%= form.label :body %>
    <%= form.text_area :body %> 
   </td>
   <td>
    <%= form.file_field :image, accept: "image/*" %>
   </td>
   <td>
    <%= form.submit "投稿" %> 
   </td>
 </tr>
<% end %>