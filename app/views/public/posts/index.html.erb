<h1>投稿一覧</h1>
<table>
　<% @posts.each do |post| %>
　  <tr>
　    <td>
　     <% if post.image.attached? %>
       <%= image_tag post.image, size: "100x100" %>
       <% end %>
　    </td>
　    <td>
　     <%= post.title %>
　    </td> 
　    <td>
　     <%= post.body %>
　    </td>
　    
　  </tr>
  <% end %>
</table>