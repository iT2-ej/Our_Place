<h1>会員一覧</h1>
 <table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
       <%= user.id %>
      </td>
      <td>
       <%= link_to admin_user_path(user.id) do %>
       <%= user.user_name %>
       <% end %>
       <%= user.last_name %>
       <%= user.first_name %>
      </td>
      <td>
       <%= user.email %>
      </td>
      <td>
       <% if user.is_deleted == false %>
        <p>有効</p>
        <% else  %>
        <p>退会</p>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>